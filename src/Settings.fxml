<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:controller="SettingsController" styleClass="home-background"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <VBox spacing="25.0" maxWidth="600" maxHeight="550"
          style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-background-radius: 20; -fx-padding: 40;">

        <Label text="Настройки лаунчера" textFill="WHITE">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <Separator opacity="0.3" />

        <GridPane vgap="20" hgap="20">
            <columnConstraints>
                <ColumnConstraints minWidth="150" prefWidth="200" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Язык интерфейса:" textFill="WHITE" GridPane.rowIndex="0" />
            <ComboBox fx:id="languageComboBox" prefWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Разрешение окна:" textFill="WHITE" GridPane.rowIndex="1" />
            <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <TextField fx:id="widthField" prefWidth="80" promptText="Ширина" />
                <Label text="x" textFill="WHITE" />
                <TextField fx:id="heightField" prefWidth="80" promptText="Высота" />
            </HBox>

            <VBox spacing="12" GridPane.columnSpan="2" GridPane.rowIndex="2">
                <CheckBox fx:id="closeOnLaunchCheckBox" text="Закрывать после запуска" textFill="WHITE" />
                <CheckBox fx:id="enableSnapshotsCheckBox" text="Показывать Snapshot версии" textFill="WHITE" />
            </VBox>
        </GridPane>

        <Region VBox.vgrow="ALWAYS" />

        <Button fx:id="saveButton" text="СОХРАНИТЬ ИЗМЕНЕНИЯ" styleClass="button-main"
                prefWidth="Infinity" prefHeight="45" style="-fx-font-weight: bold;" />
    </VBox>
</StackPane>